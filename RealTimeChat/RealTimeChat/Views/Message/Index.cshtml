@model RealTimeChat.Models.InputMessage

@{
    ViewData["Title"] = "Index";
}

<h4 class="text-primary">Chat messages</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" id="Username" class="form-control" autocomplete="off" placeholder="Username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message" class="control-label"></label>
                <input asp-for="Message" id="Message" class="form-control" autocomplete="off" placeholder="Message" />
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="button" id="send-msg" value="Send" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-8">
        <h3>Messages</h3>
       <ul id="messages">

       </ul>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
	<script src="~/js/signalr/dist/browser/signalr.min.js"></script>
    <script src="~/js/app/chatmessages.js"></script>
}
